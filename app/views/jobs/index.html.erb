<div class="flex h-screen prose lg:prose-xl columns">
  <div class="column left w-full md:w-1/3 p-4 grid">
    <div class="w-72">
      <%= render 'panel' %>
    </div>
  </div>

  <div class="column right w-full lg:w-2/3 pl-12 pt-6">
    <% @jobs.each do |job| %>
    <div class="flex flex-col mb-5 border-b-2">
      <div class="column">
        <% if !job.avatar.file.nil? %>
          <%= link_to image_tag(job.avatar_url(:thumb), alt: job.job_author, width: 100, height: 100), job.url %>
        <% end %>
      </div>
      <div class="column">
        <h3 class="font-bold font-serif"><%= link_to job.title, job %></h3>
          <ul>
            <li><%= link_to job.company, job.url %></li>
            <li><%= link_to 'Apply now', job.apply_url %></li>
          </ul>
        <div class="flex flex-row justify-between">
          <p class="text-md prose"><%= sanitize(job.description.truncate(200, separator: '</p>'))%></p>
          <div class="text-xs">
            <%= job_type(job.job_type) %>
            <%= job_level(job.job_level) %>
          </div>
        </div>
        <% if current_user.try(:admin) || job_author(job) %>
          <ul class=>
            <li class="text-right text-xs">Admin Controls</li>
            <div class="flex flex-row text-xs justify-between w-28 mb-2 float-right">
              <li class="inline-block">
                <%= link_to 'View', job, class: 'text-blue-500 hover:underline underline-offset-6' %></li>
              <li class="">
                <%= link_to 'Edit', edit_job_path(job), class: 'text-blue-500 hover:underline underline-offset-6' %></li>
              <li class="">
                <%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button hover:underline underline-offset-6 text-red-500' %></li>
            </div>
          </ul>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
